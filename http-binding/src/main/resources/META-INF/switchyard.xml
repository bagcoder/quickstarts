<?xml version="1.0" encoding="UTF-8"?>
<switchyard xmlns="urn:switchyard-config:switchyard:1.0" xmlns:bean="urn:switchyard-component-bean:config:1.0" xmlns:http="urn:switchyard-component-http:config:1.0" xmlns:resteasy="urn:switchyard-component-resteasy:config:1.0" xmlns:sca="http://docs.oasis-open.org/ns/opencsa/sca/200912">
  <sca:composite name="http-binding" targetNamespace="urn:switchyard-quickstart:http-binding:1.0">
    <sca:service name="QuoteService" promote="QuoteService/QuoteService">
      <http:binding.http>
        <operationSelector operationName="getPrice"/>
        <http:contextPath>http-binding/quote</http:contextPath>
      </http:binding.http>
    </sca:service>
    <sca:service name="SymbolService" promote="SymbolService/SymbolService">
      <http:binding.http>
        <operationSelector operationName="getSymbol"/>
        <http:contextMapper includes="[cC]ontent-type"/>
        <http:messageComposer class="org.switchyard.quickstarts.http.binding.CustomComposer"/>
        <http:contextPath>http-binding/symbol</http:contextPath>
      </http:binding.http>
    </sca:service>
    <sca:reference name="Symbol" multiplicity="1..1" promote="QuoteService/Symbol">
      <http:binding.http>
        <http:address>http://localhost:8080/http-binding/symbol</http:address>
        <http:method>POST</http:method>
        <http:contentType>text/plain</http:contentType>
      </http:binding.http>
    </sca:reference>
    <sca:component name="SymbolService">
      <bean:implementation.bean class="org.switchyard.quickstarts.http.binding.SymbolServiceImpl"/>
      <sca:service name="SymbolService">
        <sca:interface.java interface="org.switchyard.quickstarts.http.binding.SymbolService"/>
      </sca:service>
    </sca:component>
    <sca:component name="QuoteService">
      <bean:implementation.bean class="org.switchyard.quickstarts.http.binding.QuoteServiceImpl"/>
      <sca:service name="QuoteService">
        <sca:interface.java interface="org.switchyard.quickstarts.http.binding.QuoteService"/>
      </sca:service>
      <sca:reference name="Symbol">
        <sca:interface.java interface="org.switchyard.quickstarts.http.binding.SymbolService"/>
      </sca:reference>
    </sca:component>
    <sca:component name="FileEchoServiceBean">
      <bean:implementation.bean class="org.switchyard.quickstarts.http.binding.FileEchoServiceBean"/>
      <sca:service name="FileEchoService">
        <sca:interface.java interface="org.switchyard.quickstarts.http.binding.FileEchoService"/>
      </sca:service>
    </sca:component>
    <sca:service name="FileEchoService" promote="FileEchoServiceBean/FileEchoService">
      <sca:interface.java interface="org.switchyard.quickstarts.http.binding.FileEchoService"/>
      <resteasy:binding.rest name="rest">
        <resteasy:interfaces>org.switchyard.quickstarts.http.binding.FileEchoServiceRest</resteasy:interfaces>
        <resteasy:contextPath>rest</resteasy:contextPath>
      </resteasy:binding.rest>
    </sca:service>
  </sca:composite>
</switchyard>